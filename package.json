{
  "name": "webpack-skeleton",
  "version": "0.0.1",
  "description": "A webpack skeleton.",
  "scripts": {
    "start": "PORT=3000 node server.js",
    "eslint": "eslint src",
    "clean": "rimraf ./dist",
    "prettier:fix": "prettier --write 'src/**/*.js'",
    "build": "npm run clean && webpack",
    "build:prod": "npm run clean && NODE_ENV=production webpack -p && npm run copy",
    "copy": "cp index.prod.html dist/index.html && cp CNAME dist/CNAME",
    "watch:test": "npm test -- --auto-watch --no-single-run",
    "deploy": "npm run build:prod && gh-pages -d dist --repo https://$GITHUB_TOKEN@github.com/hyperh/heyseli.git",
    "test": "yarn run eslint"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "linters": {
      "*.js": [
        "prettier --write",
        "eslint",
        "git add"
      ]
    }
  },
  "pre-commit": [
    "prettier:pre-commit",
    "lint"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/hyperh/webpack-skeleton.git"
  },
  "bugs": {
    "url": "https://github.com/hyperh/webpack-skeleton/issues"
  },
  "homepage": "https://github.com/hyperh/webpack-skeleton",
  "devDependencies": {
    "@babel/core": "^7.1.6",
    "@babel/preset-env": "^7.1.6",
    "@babel/preset-react": "^7.0.0",
    "autoprefixer": "^6.3.6",
    "babel-eslint": "^6.0.4",
    "babel-loader": "^8.0.4",
    "babel-plugin-__coverage__": "^11.0.0",
    "babel-plugin-styled-components": "^1.8.0",
    "css-loader": "^0.23.1",
    "eslint": "^2.12.0",
    "eslint-config-airbnb": "^9.0.1",
    "eslint-config-prettier": "^2.6.0",
    "eslint-loader": "^1.3.0",
    "eslint-plugin-import": "^1.8.1",
    "eslint-plugin-jsx-a11y": "^1.4.2",
    "eslint-plugin-prettier": "^2.3.1",
    "eslint-plugin-react": "^5.1.1",
    "file-loader": "^2.0.0",
    "gh-pages": "^0.11.0",
    "husky": "^1.1.4",
    "image-webpack-loader": "^4.5.0",
    "lint-staged": "^8.0.4",
    "node-sass": "^3.8.0",
    "postcss-loader": "^0.9.1",
    "prettier": "^1.7.4",
    "react-hot-loader": "^3.0.0-beta.1",
    "resolve-url-loader": "^1.6.0",
    "rimraf": "^2.6.2",
    "sass-loader": "^4.0.0",
    "style-loader": "^0.13.1",
    "url-loader": "^0.5.7",
    "webpack": "^4.25.1",
    "webpack-dev-server": "^1.14.1"
  },
  "dependencies": {
    "classnames": "^2.2.5",
    "lodash": "^4.13.1",
    "react": "^16.6.3",
    "react-dom": "^16.6.3",
    "react-icons": "^2.2.1",
    "react-images": "^0.5.19",
    "react-router": "^2.8.1",
    "styled-components": "^4.1.1"
  }
}
